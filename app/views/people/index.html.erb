<%= render 'shared/header' %>

<div class="container mt-2">
<div class="alert alert-primary text-center">
  <h1>人の検索</h1>
</div>

<div class="card card-body bg-light mb-4">
  <%= form_with method: 'get', local: true do |f| %>
    <div class="form-group row">
      <label class="col-sm-3 col-form-label">名前</label>
      <%= f.text_field :name, value: @params[:name], id: :name, class: ['col-sm-8','form-control'] %><br>
    </div>
    <div class="form-group row">
      <label class="col-sm-3 col-form-label">Twitter</label>
      <%= f.text_field :twitter, value: @params[:twitter], id: :twitter, class: ['col-sm-8', 'form-control'] %><br>
    </div>
    <div class="form-group row">
      <label class="col-sm-3 col-form-label">都道府県</label>
      <%= f.select :factory_id, options_for_select(Prefecture.all.map{|e| [e.name, e.id]}, @params[:factory_id]), {include_blank: true}, {id: :prefectureId, class:['auto_complete', 'col-sm-8', 'form-control']} %><br>
    </div>
    <div class="form-group row">
      <label class="col-sm-3 col-form-label">誕生年</label>
      <div class="form-inline">
        <%= f.text_field :birth_year_from, value: @params[:birth_year_from], id: :birthYearFrom, class:['col-sm-5', 'form-control'] %><br>
        <span class="px-2">〜</span>
        <%= f.text_field :birth_year_to, value: @params[:birth_year_to], id: :birthYearTo, class:['col-sm-5', 'form-control'] %><br>
      </div>
    </div>
    <div class="row">
      <%= f.submit '検索', name: nil, class: ['btn', 'col-sm-2', 'offset-sm-4', 'btn-primary', 'mr-2'] %>
      <%= link_to '新規登録', new_kigurumi_path, class: ['btn', 'col-sm-2', 'btn-danger', 'mr-2'] %>
    </div>
  <% end %>
</div>
<div class="row">
  <% @people&.each do |person| %>
    <%= render partial: 'person_card', locals: {person: person} %>
  <% end %>
</div>
</container>