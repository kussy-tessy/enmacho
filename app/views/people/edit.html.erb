<div class="container mt-2 mb-2">
  <div class="card card-body col-lg-8 offset-lg-2 bg-light">
    <%= form_with url:@url, method: @method, local: true, html: {autocomplete: 'off'} do |f| %>
      <%= f.hidden_field :id, value: @person.id %>
      <div class="form-group row">
        <label class="col-sm-4 control-label"><b>名前</b></label>
        <%= f.text_field :name, value: @person.name, id: :name, class: ['form-control', 'col-sm-8'] %>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 control-label"><b>Twitter</b></label>
        <div class="input-group col-sm-8 p-0">
          <div class="input-group-prepend">
            <span class="input-group-text">@</span>
          </div>
        <%= f.text_field :twitter, value: @person.twitter, id: :twitter, class: ['form-control'] %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 control-label"><b>他の名義</b></label>
        <%= f.text_field :other_name, value: @person.other_name, id: :otherName, class: ['col-sm-8', 'form-control'] %><br>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 control-label"><b>名前（他の名義）の読み</b></label>
        <%= f.text_field :yomigana, value: @person.yomigana, id: :yomigana, class: ['col-sm-8', 'form-control'] %><br>
      </div>
      <div class="form-group row">
        <label  class="col-sm-4 control-label"><b>都道府県・国</b></label>
        <%= f.select :factory_id, options_for_select([['', '']] + Prefecture.all.map{|prefecture| [prefecture.name, prefecture.id]}, @person.prefecture_id), {}, {id: :prefecture, class: ['form-control', 'col-sm-8']} %><br>
      </div>
      <div class="form-group row">
      <label  class="col-sm-4 control-label"><b>出身都道府県・国</b></label>
      <%= f.select :factory_id, options_for_select([['', '']] + Prefecture.all.map{|prefecture| [prefecture.name, prefecture.id]}, @person.home_prefecture_id), {}, {id: :prefecture, class: ['form-control', 'col-sm-8']} %><br>
    </div>
      <div class="form-group row">
        <label class="col-sm-4 control-label"><b>誕生年</b></label>
        <div class="input-group col-sm-8 p-0">
          <div class="input-group-prepend">
            <div class="input-group-text">
              <input type="checkbox" id="birthYearIsReliable">
              <label for="birthYearIsReliable" class="ml-2 mt-0 mb-0 mr-0">確実</label>
            </div>
          </div>
          <%= f.text_field :twitter, value: @person.twitter, id: :twitter, class: ['form-control'] %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.submit '登録', class:'btn btn-danger btn-block col-sm-4 offset-sm-4' %>
      </div>
    </div>
    <% end %>
  </div>
</div>