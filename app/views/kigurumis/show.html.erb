<%= render 'shared/header' %>

<div class="container mt-2">
  <div class="row mb-2">
    <a href="<%= edit_kigurumi_path(@kigurumi) %>" class="btn btn-primary col-sm-4 offset-sm-4">情報を編集する</a>
  </div>
  <table class="table">
  <tr>
    <th>キャラクター</th>
    <td><%= @kigurumi.character&.name_with_work || '？' %></td>
  </tr>
    <tr>
      <th>所有者</th>
      <td><%= @kigurumi.owner&.name_with_twitter %></td>
    </tr>
    <tr>
      <th>工房</th>
      <td><%= @kigurumi.factory&.name %></td>
    </tr>
    <tr>
      <th>製作者</th>
      <td><%= @kigurumi.customizer&.name_with_twitter %></td>
    </tr>
    <tr>
      <th>以前の所有者</th>
      <td><%= @kigurumi.previous_owner&.name_with_twitter %></td>
    </tr>
    <tr>
    <th>お披露目年</th>
      <td><%= @kigurumi.show_year %></td>
    </tr>
    <tr>
      <th>備考</th>
      <td><%= @kigurumi.remarks %></td>
    </tr>
    <tr>
      <th>髪の色</th>
      <td><%= @kigurumi.hair_color %></td>
    </tr>
    <tr>
      <th>髪の長さ</th>
      <td><%= @kigurumi.hair_length %></td>
    </tr>
    <tr>
      <th>口開き/口閉じ</th>
      <td><%= @kigurumi.mouth_open %></td>
    </tr>
  </table>
  <div classs="row">
    <div class="col-sm-6 offset-sm-3">
      <div class="mx-auto tweet-container" data-tweet-id="<%= @kigurumi.kigurumi_images[0]&.tweet_id %>"></div>
      <div class="mx-auto tweet-container" data-tweet-id="<%= @kigurumi.kigurumi_images[1]&.tweet_id %>"></div>
      <div class="mx-auto tweet-container" data-tweet-id="<%= @kigurumi.kigurumi_images[2]&.tweet_id %>"></div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://platform.twitter.com/widgets.js"></script>